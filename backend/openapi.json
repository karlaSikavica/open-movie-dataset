{
  "openapi": "3.0.3",
  "info": {
    "title": "Open Movie Dataset API",
    "version": "3.0",
    "description": "REST API za otvoreni skup podataka o filmovima i glumcima (CRUD + dodatni GET endpointi).",
    "contact": {
      "name": "Autor",
      "email": "contact@example.com"
    },
    "license": {
      "name": "CC0 1.0 Universal"
    }
  },
  "paths": {
    "/api/filmovi": {
      "get": {
        "summary": "Dohvati kolekciju filmova",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "zanr",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "godina",
            "in": "query",
            "required": false,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MoviesResponse" }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Kreiraj novi film",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MovieCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MovieResponse" }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/api/filmovi/{id}": {
      "get": {
        "summary": "Dohvati film po ID-u",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MovieResponse" }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Osvježi film po ID-u",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MovieUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MovieResponse" }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Obriši film po ID-u",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/DeleteResponse" }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/api/filmovi/{id}/glumci": {
      "get": {
        "summary": "Dohvati glumce za film",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ActorsResponse" }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/api/glumci": {
      "get": {
        "summary": "Dohvati kolekciju glumaca",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ActorsResponse" }
              }
            }
          }
        }
      }
    },
    "/api/statistika/zanrovi": {
      "get": {
        "summary": "Statistika filmova po žanru",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/GenresStatsResponse" }
              }
            }
          }
        }
      }
    },
    "/api/filmovi-view": {
      "get": {
        "summary": "Tablični prikaz (join film + glumac) s filtriranjem",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "field",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MoviesViewResponse" }
              }
            }
          }
        }
      }
    },
    "/openapi.json": {
      "get": {
        "summary": "Posluži OpenAPI specifikaciju",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "type": "object" } }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ResponseWrapper": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": {}
        }
      },
      "ErrorResponse": {
        "allOf": [{ "$ref": "#/components/schemas/ResponseWrapper" }]
      },
      "Movie": {
        "type": "object",
        "properties": {
          "film_id": { "type": "integer" },
          "naziv": { "type": "string" },
          "godina": { "type": "integer" },
          "zanr": { "type": "string", "nullable": true },
          "zemlja": { "type": "string", "nullable": true },
          "trajanje_min": { "type": "integer", "nullable": true },
          "redatelj_ime": { "type": "string", "nullable": true },
          "redatelj_prezime": { "type": "string", "nullable": true },
          "budzet_mil_usd": { "type": "number", "nullable": true },
          "prosjecna_ocjena": { "type": "number", "nullable": true },
          "ocjena_imdb": { "type": "number", "nullable": true },
          "ocjena_rotten_tomatoes": { "type": "number", "nullable": true },
          "ocjena_tmdb": { "type": "number", "nullable": true }
        }
      },
      "MovieCreate": {
        "type": "object",
        "required": ["naziv", "godina"],
        "properties": {
          "naziv": { "type": "string" },
          "godina": { "type": "integer" },
          "zanr": { "type": "string" },
          "zemlja": { "type": "string" },
          "trajanje_min": { "type": "integer" },
          "redatelj_ime": { "type": "string" },
          "redatelj_prezime": { "type": "string" },
          "budzet_mil_usd": { "type": "number" },
          "prosjecna_ocjena": { "type": "number" },
          "ocjena_imdb": { "type": "number" },
          "ocjena_rotten_tomatoes": { "type": "number" },
          "ocjena_tmdb": { "type": "number" }
        }
      },
      "MovieUpdate": {
        "type": "object",
        "properties": {
          "naziv": { "type": "string" },
          "godina": { "type": "integer" },
          "zanr": { "type": "string" },
          "zemlja": { "type": "string" },
          "trajanje_min": { "type": "integer" },
          "redatelj_ime": { "type": "string" },
          "redatelj_prezime": { "type": "string" },
          "budzet_mil_usd": { "type": "number" },
          "prosjecna_ocjena": { "type": "number" },
          "ocjena_imdb": { "type": "number" },
          "ocjena_rotten_tomatoes": { "type": "number" },
          "ocjena_tmdb": { "type": "number" }
        }
      },
      "Actor": {
        "type": "object",
        "properties": {
          "glumac_id": { "type": "integer" },
          "ime": { "type": "string" },
          "prezime": { "type": "string" },
          "uloga": { "type": "string", "nullable": true },
          "spol": { "type": "string", "nullable": true },
          "datum_rodenja": { "type": "string", "nullable": true },
          "drzava_podrijetla": { "type": "string", "nullable": true },
          "aktivan_od": { "type": "integer", "nullable": true },
          "broj_nagrada": { "type": "integer", "nullable": true },
          "nagrada_oscar": { "type": "boolean", "nullable": true },
          "nagrada_golden_globe": { "type": "boolean", "nullable": true },
          "nagrada_bafta": { "type": "boolean", "nullable": true }
        }
      },
      "MoviesResponse": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Movie" }
          }
        }
      },
      "MovieResponse": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": { "$ref": "#/components/schemas/Movie" }
        }
      },
      "ActorsResponse": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Actor" }
          }
        }
      },
      "GenresStatsResponse": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "zanr": { "type": "string" },
                "broj_filmova": { "type": "integer" }
              }
            }
          }
        }
      },
      "MoviesViewResponse": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": { "type": "array", "items": { "type": "object" } }
        }
      },
      "DeleteResponse": {
        "type": "object",
        "required": ["status", "message", "response"],
        "properties": {
          "status": { "type": "string" },
          "message": { "type": "string" },
          "response": {
            "type": "object",
            "properties": { "film_id": { "type": "integer" } }
          }
        }
      }
    }
  }
}
